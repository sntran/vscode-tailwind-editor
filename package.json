{
  "name": "@brandextract/vscode-tailwind",
  "displayName": "Tailwind VSCode Editor",
  "description": "Tailwind Playground/Editor in VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Other"
  ],
  "browser": "./dist/web/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "tailwind.editor",
        "displayName": "Tailwind Editor",
        "selector": [
          {
            "filenamePattern": "*.html"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "activationEvents": [
    "onCustomEditor:tailwind.editor"
  ],
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
    "pretest": "npm run esbuild",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/web/extension.ts --bundle --outfile=./dist/web/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "watch": "npm run esbuild-base -- --sourcemap --watch",
    "lint": "eslint src --ext ts",
    "start": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "@types/mocha": "^9.1.0",
    "@types/vscode": "^1.64.0",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "@vscode/test-web": "^0.0.22",
    "assert": "^2.0.0",
    "esbuild": "^0.14.23",
    "eslint": "^8.10.0",
    "mocha": "^9.2.1",
    "process": "^0.11.10",
    "typescript": "^4.5.5"
  }
}
